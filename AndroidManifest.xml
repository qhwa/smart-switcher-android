<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="cc.pnq.spark.home"
      android:versionCode="1"
      android:versionName="1.0">

    <application
        android:label="@string/app_name"
        android:icon="@drawable/logo512"
        android:theme="@style/MyTheme" >

        <activity
            android:name="cc.pnq.spark.home.MainActivity"
            android:label="@string/app_name" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        
        <activity
            android:name="cc.pnq.spark.home.TaskListActivity"
            android:label="@string/task_list"
            android:parentActivityName="cc.pnq.spark.home.MainActivity" >

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cc.pnq.spark.home.MainActivity" />

        </activity>

    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest> 
